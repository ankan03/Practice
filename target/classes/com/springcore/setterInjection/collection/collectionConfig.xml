<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  
  	<!-- 1st Approach -->
	<bean id="employeebean" class="com.springcore.setterInjection.collection.Employee">  
		<property name="employeeId" value="1828049"></property>
		
		<property name="employeePhoneList" >
		
			<!--To make a empty list  -->
			<!-- <list>
				
			</list> -->
			
			<!--To put only  one value in list(If we want to put only one value inside list we can put only one value [Spring will convert it inti single element list])  -->
			<!-- <value>12234</value> -->
			
		
			<list>
				<value>12234</value>
				<value>12345</value>
				<value>09876</value>
				<value>12345</value>
			</list>
		</property>
		
		<property name="employeeAddressSet">
			<set>
				<value>Kolkata</value>
				<value>Chinsurah</value>
				<value>Bardhaman</value>
				<value>Chinsurah</value>
				<!-- To enter a null value inside a list -->
				<null></null>
			</set>
		</property>  
		
		<property name="employeeCourseMap">
			<map>
				<entry key="java" value="Udemy"></entry>
				<entry key="webDev" value="Coursera"></entry>
				<entry key="android" value="Udacity"></entry>
			</map>
		</property>  
		
	</bean>
  
</beans>  