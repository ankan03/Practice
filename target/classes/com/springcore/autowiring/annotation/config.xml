<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context 
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- If we use autiwired Annotation then we have to enable this tag-->
	<context:annotation-config/>
	<bean id="address1" class="com.springcore.autowiring.annotation.Address">  
		<property name="street" value="Chatterjee Bagan" />
		<property name="city" value="Chinsurah" />
	</bean>

	<!-- If we use Annotation then name of the bean doesn't matter -->
	<bean id="employee1" class="com.springcore.autowiring.annotation.Employee"/>
	
	
</beans>  