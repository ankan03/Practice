<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts  
Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">  
<struts>  
	<!-- If we want to add any sub header we have to add namespace -->
	<!-- If namespace="demo" then  http://localhost:8081/Struts2Tutorial/getTutorial.action       will converted to 
		 						   http://localhost:8081/Struts2Tutorial/demo/getTutorial.action-->
	<package name="default" extends="struts-default" namespace="/demo">  
  		<action name="getTutorial" class="com.struts2.introduction.Action">  
			<result name="success">/success.jsp</result>  
			<result name="error">/error.jsp</result>  
		</action>  
	</package>
	
	<package name="login" extends="struts-default" namespace="/">  
  		<action name="getLogin" class="com.struts2.introduction.LoginAction">  
			<result name="success">/index.jsp</result>  
			<result name="failure">/error.jsp</result>  
		</action>  
	</package>  
</struts>    